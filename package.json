{
  "name": "tsl-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Gregor Hammerschmitt",
  "license": "MIT",
  "scripts": {
    "start": "yarn knex --knexfile=dist/src/infra/postgres/knexfile.js migrate:latest --env production && node dist/src/main/server.js",
    "build": "babel src --extensions \".js,.ts\" --out-dir dist/src --copy-files --no-copy-ignored",
    "test": "jest",
    "test:dev": "jest --watch",
    "dev": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register src/main/server.ts' -e ts"
  },
  "devDependencies": {
    "@babel/cli": "7.12.1",
    "@babel/core": "7.12.3",
    "@babel/node": "7.12.1",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-typescript": "7.12.1",
    "@types/bcrypt": "^3.0.1",
    "@types/faker": "^5.5.5",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.11",
    "babel-plugin-module-resolver": "4.0.0",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.19",
    "module-alias": "^2.2.2",
    "nodemailer": "^6.6.0",
    "pg": "^8.6.0",
    "rimraf": "^3.0.2"
  },
  "moduleAliases": {
    "@": "dist"
  }
}
